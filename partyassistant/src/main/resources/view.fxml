<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="background" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.partyassistant.controller.ViewController">

    <children>
        <ComboBox fx:id="globalCategory" layoutX="50.0" layoutY="30.0" prefHeight="50.0" prefWidth="250.0" promptText="Select global category" style="-fx-background-color: TOMATO; -fx-font-size: 16; -fx-font-family: Candara;" />
        <ComboBox fx:id="innerCategory" layoutX="50.0" layoutY="110.0" prefHeight="50.0" prefWidth="250.0" promptText="Select inner category" style="-fx-background-color: TOMATO; -fx-font-size: 16; -fx-font-family: Candara;" />
        <Pane layoutX="90.0" layoutY="200.0" prefHeight="500.0" prefWidth="250.0" style="-fx-opacity: 100">
         <children>
            <VBox fx:id="ingredients" prefHeight="500.0" prefWidth="250.0" />
         </children>
        </Pane>
        <ImageView fx:id="recipeImage" fitHeight="400.0" fitWidth="500.0" layoutX="330.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="recipeName" layoutX="870.0" layoutY="30.0" prefHeight="50.0" prefWidth="470.0" style="-fx-background-color: rgba(0,0,0,0.7); -fx-text-fill: TOMATO; -fx-alignment: CENTER; -fx-font-size: 20; -fx-font-family: Candara;" />
        <Label fx:id="recipeIngredients" layoutX="330.0" layoutY="340.0" prefHeight="307.0" prefWidth="500.0" style="-fx-background-color: rgba(0,0,0,0.7); -fx-text-fill: TOMATO;  -fx-font-family: Candara; -fx-font-size: 16; " />
        <Label fx:id="recipeDescription" layoutX="870.0" layoutY="89.0" prefHeight="558.0" prefWidth="470.0" style="-fx-background-color: rgba(0,0,0,0.7); -fx-text-fill: TOMATO;  -fx-font-family: Candara; -fx-font-size: 16;" />

    </children>

</AnchorPane>
